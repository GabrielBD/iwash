{% extends 'base.html.twig' %}

{% block body %}
    <h1>Flota list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Cantidad</th>
                <th>Periodicidad</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for flotum in flotas %}
            <tr>
                <td><a href="{{ path('corporativo_flota_show', { 'id': flotum.id }) }}">{{ flotum.id }}</a></td>
                <td>{{ flotum.cantidad }}</td>
                <td>{{ flotum.periodicidad }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('corporativo_flota_show', { 'id': flotum.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('corporativo_flota_edit', { 'id': flotum.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('corporativo_flota_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
