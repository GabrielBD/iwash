{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vehiculo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehiculo.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ vehiculo.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ vehiculo.descripcion }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ vehiculo.precio }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_vehiculo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_vehiculo_edit', { 'id': vehiculo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
