        {% endfor %}

    </ul>

        <a href="{{ path('corporativo_plan_index') }}" class="btn btn-warning">Cancelar</a>
        <button type="submit" class="btn btn-primary" value="Enviar Plan">Enviar Plan</button>
    {# form_end(form) #}
</div>
{% endblock portada %}

