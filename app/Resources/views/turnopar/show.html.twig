                <td>{% if turnoPar.hora %}{{ turnoPar.hora|date('H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reserva_turnopar_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('reserva_turnopar_edit', { 'id': turnoPar.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
