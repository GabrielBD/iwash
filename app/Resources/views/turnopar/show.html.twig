{% extends 'base.html.twig' %}

{% block body %}
    <h1>TurnoPar</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ turnoPar.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if turnoPar.fecha %}{{ turnoPar.fecha|date('Y-m-d') }}{% endif %}</td>
