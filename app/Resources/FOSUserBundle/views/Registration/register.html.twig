{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}

{% trans_default_domain 'FOSUserBundle' %}

<div class="col-md-12">
<h1>Registrarse en el sistema</h1>
<h5><em>*Todos los campos son obligatorios.</em></h5>

{% form_theme form 'bootstrap.html.twig' %}
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register form-horizontal'}}) }}


{{ form_widget(form) }}




<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<input type="submit" class="btn btn-primary" value="Registrarse" />
	</div>
</div>

{{ form_end(form) }}

</div>
{% endblock fos_user_content %}

{% block servicios %}
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('public/js/mio.js') }}"></script>
<script src="{{ asset('public/js/inputmask.js') }}"></script>
{% endblock %}
